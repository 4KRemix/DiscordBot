{
	"version": "1.0.0-*",
	"description": "DiscordBot",
	"authors": [ "RogueException" ],
	"tags": [ "discord", "discordapp" ],
	"projectUrl": "https://github.com/RogueException/Discord.Bot",
	"licenseUrl": "http://opensource.org/licenses/MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/RogueException/DiscordBot"
	},
	"exclude": [ "config" ],

	"commands": {
		"start": "DiscordBot"
	},

	"configurations": {
		"PrivateDebug": {
			"compilationOptions": {
				"define": [
					"DEBUG",
					"TRACE",
					"PRIVATE"
				]
			}
		},
		"PrivateRelease": {
			"compilationOptions": {
				"define": [
					"RELEASE",
					"PRIVATE"
				]
			}
		}
	},

	"dependencies": {
		"Discord.Net": "",
		"Discord.Net.Audio": "",
		"Discord.Net.Commands": "",
		"Discord.Net.Modules": "",
		"Newtonsoft.Json": "7.0.1",
		"NAudio": "1.7.3",
		"Microsoft.CodeAnalysis.CSharp": "1.1.0-rc1-20151109-01",
		"Microsoft.CodeAnalysis.CSharp.Scripting": "1.1.0-rc1-20151109-01",
		"Microsoft.Dnx.Compilation.Abstractions": "1.0.0-rc1-final",
		"Microsoft.AspNet.Hosting": "1.0.0-rc1-final",
		"Microsoft.Dnx.Compilation.CSharp.Abstractions": "1.0.0-rc1-final"
	},

	"frameworks": {
		"dnx46": {
			"frameworkAssemblies": {
				"System.Collections": "4.0.10.0",
				"System.IO": "4.0.0.0",
				"System.Net.Http": "4.0.0.0",
				"System.Reflection": "4.0.10.0",
				"System.Runtime": "4.0.20.0",
				"System.Threading.Tasks": "4.0.10.0",
				"System.Xml": "4.0.0.0",
				"System.Xml.Linq": "4.0.0.0"
			}
		}
	}
}
